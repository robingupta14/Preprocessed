<?php






$var_0 	= new class_0;
$var_1		= new class_1;
$var_2		= new class_2 ($var_0);


$var_2->check_user_session();


if (!$var_2->self_update_widgets ($_POST['widgets'])) 	{ $var_1->show("danger", _('Error updating'),true); }
else 													{ $var_1->show("success", _('Widgets updated'),true); }
?>