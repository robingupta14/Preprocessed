    if ($var_18) {
        $var_18->postMessage(
            var_3\var_9::var_32,
            getlocal('Visitor rejected invitation', null, get_current_locale(), true)
        );
    }

    $var_2 = var_3\var_4::getInstance();
    $var_2->query(
        ("UPDATE {sitevisitor} v, {thread} t SET "
            . "v.threadid = NULL, "
