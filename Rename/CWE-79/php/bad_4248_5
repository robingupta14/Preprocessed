            array('return_rows' => var_3\var_4::var_52)
        );

        
        foreach ($var_51 as $var_53) {
            $var_18 = var_3\var_9::createFromDbInfo($var_53);
            $var_18->var_28 = var_3\var_9::var_54;
            $var_18->var_27 = var_3\var_9::var_45;
