        );

        
        $var_51 = $var_2->query(
            ("SELECT * FROM {thread} "
                . "WHERE istate = :state_invited "
                . "AND invitationstate = :invitation_wait "
                . "AND (:now - dtmcreated) > :lifetime"),
            array(
                ':invitation_wait' => var_3\var_9::var_11,
                ':state_invited' => var_3\var_9::var_10,
                ':lifetime' => var_3\var_50::get('invitation_lifetime'),
                ':now' => $var_49,
