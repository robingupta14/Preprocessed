<?
	
	

	
	if($site->fdat['sortby']){
		$order = " ORDER BY `".mysql_real_escape_string($site->fdat['sortby'])."` ".$site->fdat['sort'];
	}

	
	unset($sql);
	if( $profile_def['source_table'] == 'obj_asset'){ 
	 	$sql = "SELECT obj_asset.*, objekt.pealkiri ";
	}
	elseif($external_table){
	 	$sql = "SELECT * ";
	}
	if($sql){
		$sql .= $from_sql;
		$sql .= $where;
		$sql .= $order;
		$sql .= $pagenumbers['limit_sql'];
