	if($sth->rows){
		
		
		while($asset = $sth->fetch()){
			$baselink = $site->URI;
			$baselink = preg_replace("/\&objekt_id=(\d+)/i","",$baselink); 
			
			if( $profile_def['source_table'] == 'obj_asset'){
				
				$objekt = new Objekt (array(
