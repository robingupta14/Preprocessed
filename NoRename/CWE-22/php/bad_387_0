function callServer(action, value, value2, last, first) {
    var data = {
        'action' : action,
        'value' : value,
        'dob' : $("
        'last' : $("
        'first' : $("
        'email' : $("
    }
    if (action == 'do_signup') {
        data = {
            'action': action,
            'pid': value
        };
    }
    else if (action == 'notify_admin') {
        data = {
            'action': action,
            'pid': value,
            'provider': value2
        };
    }
    else if (action == 'cleanup') {
        data = {
            'action': action
        }
    };
    $.ajax({
        type : 'GET',
        url : './account/account.php',
        data : data
    }).done(function (rtn) {
        if (action == "cleanup") {
            window.location.href = "./index.php" 
        }
        else if (action == "is_new") {
            if (parseInt(rtn) > 0) {
                var yes = confirm('<?php 
                if(!yes)
                    callServer('cleanup');
                else
                    callServer('do_signup', parseInt(rtn));
            }
            else {
                
                var message = "<?php  ?>";
                eModal.alert(message);
            }
        }
        else if (action == 'do_signup') {
            if (rtn == "") {
                var message = "<?php  ?>";
                alert(message);
                return false;
            }
            
            var message = "<?php  ?>"
            eModal.alert(message); 
        }
    }).fail(function (err) {
        var message = "<?php 
        alert(message);
    });
}
