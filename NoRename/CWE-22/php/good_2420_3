var_dump(file_exists("a/b/../dir4/D.not.a.file/D.a.file")); 
var_dump(file_exists("$dir/d/dir5/E")); 
var_dump(file_exists("a/b/../c/../../d/dir5/E")); 
var_dump(file_exists("$dir/dir6/F.exe")); 
var_dump(file_exists("./dir6/F.exe")); 
var_dump(file_exists("$dir/G.txt")); 
var_dump(file_exists("./G.txt")); 
