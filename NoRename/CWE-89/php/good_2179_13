				if (SGIsNotEmpty($SG["sg_id"], $access)) {
                                    if ($is_admin || (isset($lcaSG) && isset($lcaSG[$SG["sg_id"]]))) {
			        	$buffer->startElement("item");
				        $buffer->writeAttribute("child", "1");
